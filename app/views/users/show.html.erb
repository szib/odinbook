<div class="d-flex bg-light border rounded flex-column m-3 justify-content-center">
  <div class="m-2 text-center">
    <% if @user.profile.avatar.attached? %>
      <%= image_tag @user.profile.avatar.variant(resize: "100x100"), class: 'p-3 border rounded' %>
    <% else %>
      <%= image_tag @user.gravatar_url, class: 'p-3 border rounded' %>
    <% end %>
  </div>
  <div class="text-center m-2 font-weight-bold">
    <h3>
      <%= @user.profile.full_name %>
    </h3>
  </div>
  <div class="text-center m-2">
    <%= @user.email %>
  </div>
  <div class="text-center m-2">
    <%= @user.profile.location %>
  </div>
</div>

<% @user.posts.each do |post| %>
  <%= render 'shared/post', post: post %>
<% end %>
