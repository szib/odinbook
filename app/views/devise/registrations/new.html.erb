<% content_for :title, 'Sign up' %>
<%= render 'devise/shared/form_header' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="m-2 p-5">
    <%= devise_error_messages! %>

    <div class="form-group form-row align-items-center">
      <%= f.label :email, class: 'col-sm-4' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-8' %>
    </div>

    <div class="form-group form-row align-items-center">
      <% if @minimum_password_length %>
        <%= f.label :password,
         raw("Password <em>(#{@minimum_password_length} characters minimum)</em>"),
         class: 'col-sm-4' %>
      <% else %>
        <%= f.label :password, class: 'col-sm-4' %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control col-sm-8' %>
    </div>

    <div class="form-group form-row align-items-center">
      <%= f.label :password_confirmation, class: 'col-sm-4' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control col-sm-8' %>
    </div>

    <%= f.fields_for :profile do |profile_fields| %>
      <div class="form-group form-row align-items-center">
        <%= profile_fields.label :first_name, class: 'col-sm-4' %>
        <%= profile_fields.text_field :first_name, autofocus: true, autocomplete: "off", class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group form-row align-items-center">
        <%= profile_fields.label :last_name, class: 'col-sm-4' %>
        <%= profile_fields.text_field :last_name, autofocus: true, autocomplete: "off", class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group form-row align-items-center">
        <%= profile_fields.label :location, class: 'col-sm-4' %>
        <%= profile_fields.text_field :location, autofocus: true, autocomplete: "off", class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group form-row align-items-center">
        <%= profile_fields.label :avatar, class: 'col-sm-4' %>
        <%= profile_fields.file_field :avatar, autofocus: true, autocomplete: "off", class: 'form-control col-sm-8' %>
      </div>
    <% end %>

  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: 'btn btn-primary px-5' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

<%= render 'devise/shared/form_footer' %>
