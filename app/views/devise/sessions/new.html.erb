<% content_for :title, 'Login' %>
<%= render 'devise/shared/form_header' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="m-2 p-5">
    <div class="form-group form-row align-items-center">
      <%= f.label :email, class: 'col-sm-4' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-sm-8' %>
    </div>

    <div class="form-group form-row align-items-center">
      <%= f.label :password, class: 'col-sm-4' %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control col-sm-8' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-check form-check-inline form-row align-items-center">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end -%>
  </div>

  <div class="text-center">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render 'devise/shared/form_footer' %>
